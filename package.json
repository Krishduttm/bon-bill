{
  "name": "bon",
  "version": "1.0.0",
  "description": "BON rewards system backend",
  "main": "dist/src/main.js",
  "scripts": {
    "build": "tsc",
    "build:netlify": "npm run build && npm run build:functions",
    "build:functions": "tsc netlify/functions/api.ts --outDir netlify/functions --moduleResolution node --esModuleInterop --target es2020 --lib es2020 --skipLibCheck --experimentalDecorators --emitDecoratorMetadata && cp -r dist netlify/functions/",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "node dist/src/main",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "node dist/src/main",
    "db:setup": "ts-node src/setup-db.ts",
    "seed": "ts-node src/seed.ts",
    "seed:fresh": "FORCE_SYNC=true ts-node src/seed.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@nestjs/common": "^10.4.20",
    "@nestjs/core": "^10.4.20",
    "@nestjs/platform-express": "^10.4.20",
    "@nestjs/sequelize": "^10.0.1",
    "@netlify/functions": "^2.8.1",
    "@vendia/serverless-express": "^4.12.6",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.2",
    "express": "^4.19.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^24.5.2",
    "@types/pg": "^8.15.5",
    "netlify-cli": "^17.34.2",
    "nodemon": "^3.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
